---
import Layout from '../layouts/Layout.astro';
import BlackButton from '../components/BlackButton.astro';
import PrimaryButton from '../components/PrimaryButton.astro';
---

<Layout title="Shotaro Nakata's Portfolio">
  <div class="relative h-screen overflow-hidden" style="background-image: url(/images/paper-texture.png)">
    <main
      class="max-w-lg absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
    >
      <h1 class="text-center text-6xl font-extrabold">Hi!<br />I'm Shotaro.</h1>
      <div class="h-8"></div>
      <p>
        I am a front-end developer with a passion for building user friendly and
        performant SPAs and JAMstack sites.
      </p>
      <div class="h-8"></div>
      <div class="flex justify-between">
        <BlackButton>Who am I?</BlackButton>
        <PrimaryButton>Discover my projects.</PrimaryButton>
      </div>
    </main>
    <img src="/images/me.svg" alt="me" class="absolute right-40 top-1/3 -z-10">
    <img src="/images/top_gummy.svg" alt="top_gummy" class="absolute -top-2/4 -left-1/4 -z-10">
    <img src="/images/middle_gummy.svg" alt="middle_gummy" class="absolute -right-1/4 -bottom-1/4 -z-10">
  </div>
</Layout>
