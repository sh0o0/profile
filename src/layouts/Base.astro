---
import Footer from '../components/Footer.astro';
import Header from '../components/Header';
import Scaffold from './Scaffold.astro';

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<Scaffold title={title}>
  <img src="/images/top_gummy.svg" alt="top_gummy" class="top-gummy" />

  <Header client:only />
  <slot />
  <Footer />
</Scaffold>

<style>
  .top-gummy {
    position: absolute;
    z-index: -10;
    top: -180px;
    left: -100px;
  }

  @media (min-width: 768px) {
    .top-gummy {
      top: -900px;
      left: -600px;
    }
  }
</style>
